<form method="post">
    <div>
        <h3>Регистрация</h3>
    </div>

    <div class="row">
        <div class="col-3">
            <input class="form-control" type="text" name="username" value="Логин" />
        </div>           
    </div>               
                         
    <div class="row">    
        <div class="col-3">
            <input class="form-control" type="password" name="password" value="Пароль" />
        </div>
    </div>

    <div class="row">
        <div class="col-3">
            <input class="form-control" type="password" name="confirmPassword" value="Подтверждение пароля" />
        </div>
    </div>
        
    <div>
        <button class="btn btn-success" type="submit" asp-controller="Account" asp-action="Register">Регистрация</button>
    </div>

    
</form>