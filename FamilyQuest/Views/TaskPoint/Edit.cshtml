@model TaskPoint

@await Html.PartialAsync("GameMenu")

<form method="post">
    <div>
        <h3>Новое задание</h3>
    </div>

    <div class="row">
        <div class="col-2">
            <label>Название задания:</label>
        </div>
        <div class="col-2">
            <input class="form-control" type="text" name="name" value="@Model.Name" />
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            <label>Описание задания:</label>
        </div>
        <div class="col-2">
            <input class="form-control" type="text" name="description" value="@Model.Description" />
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            <label>Вопрос:</label>
        </div>
        <div class="col-2">
            <input class="form-control" type="text" name="question" value="@Model.Question" />
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            <label>Ответ:</label>
        </div>
        <div class="col-2">
            <input class="form-control" type="text" name="answer" value="@Model.Answer" />
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            <label>Ссылка на картинку:</label>
        </div>
        <div class="col-2">
            <input class="form-control" type="text" name="ImagePath" value="@Model.ImagePath"/>
        </div>
    </div>

